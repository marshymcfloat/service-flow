generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Business {
  id   String @id @default(cuid())
  name String
  slug String @unique

  services Service[]
  employees Employee[]
  owners    Owner[]
  customers Customer[]
  bookings Booking[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model User {
  id    String @id @default(cuid())
  email String @unique
  hashed_password String
  name  String

  role      Role       @default(EMPLOYEE)
  employees Employee[]
  owners    Owner[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Employee {
  id      Int    @id @default(autoincrement())
  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  business_id String
  business    Business @relation(fields: [business_id], references: [id], onDelete: Cascade)

  @@unique([business_id, user_id])
}

model Owner {
  id      Int    @id @default(autoincrement())
  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  business_id String
  business    Business @relation(fields: [business_id], references: [id], onDelete: Cascade)

  @@unique([business_id, user_id])
}

model Service {
  id Int @id @default(autoincrement())
  name String
  description String?
  price Float
  duration Int?

  business_id String
  business    Business @relation(fields: [business_id], references: [id], onDelete: Cascade)

  availed_services AvailedService[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

}

model Customer {
  id String @id @default(cuid())
  name String
  email String?
  phone String?
  
  business_id String
  business    Business @relation(fields: [business_id], references: [id], onDelete: Cascade)

  bookings Booking[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}



model Booking {

  id Int @id @default(autoincrement())

  total Float
  status BookingStatus @default(PENDING)
  customer Customer @relation(fields: [customer_id], references: [id], onDelete: Cascade)
  customer_id String

  business Business @relation(fields: [business_id], references: [id], onDelete: Cascade)
  business_id String

  availed_services AvailedService[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt


}

model AvailedService {
  id Int @id @default(autoincrement())
  price Float

  booking_id Int
  booking    Booking  @relation(fields: [booking_id], references: [id], onDelete: Cascade)

  service_id Int
  service    Service  @relation(fields: [service_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

enum Role {
  OWNER
  EMPLOYEE
}

enum BookingStatus {
  PENDING
  ACCEPTED
  REJECTED
  CANCELLED
  RESCHEDULED
  DOWNPAYMENT_PENDING
  DOWNPAYMENT_PAID
  COMPLETED
}